{
  "image": "mcr.microsoft.com/devcontainers/ruby:3",
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp",
        "formulahendry.code-runner",
        "MS-CEINTL.vscode-language-pack-ja"
      ]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [3000]
}
